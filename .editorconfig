# .editorconfig
# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript files
[*.js]
indent_style = space
indent_size = 4

# TypeScript files
[*.ts]
indent_style = space
indent_size = 4

# JSON and YAML (optional, consistent indentation)
[*.{json,yml,yaml}]
indent_style = space
indent_size = 4

# Markdown files (don't trim whitespace â€” useful for tables)
[*.md]
trim_trailing_whitespace = false
